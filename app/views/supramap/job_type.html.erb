<fieldset><legend>Define new job</legend>
	
	<% form_for :job, @job, :url => {:action => "add_job"} do |form| %>
		<table><tr>
			<tr>
				<td>New job  <%= form.text_field :name, :size => 20 %></td>
				<input type="hidden" id="user_id" name="job[project_id]" value="<%= @project.id %>" />
			</tr>
			<tr>
				<td>I have a <%= form.select :job_type, ["fas", "xml"]%> file.</td>
			</tr>
			<tr>
				<td><%= submit_tag "Define", :class => "submit" %></td></tr>
			</tr>
		</table>
	<% end%>
