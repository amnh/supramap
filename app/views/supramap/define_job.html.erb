<fieldset><legend>Define a new job</legend>

  <% form_for :job, @job, :url => {:action => "select_files_for_job"} do |form| %>
  <input type="hidden" id="user_id" name="job[project_id]" value="<%= h(@project.id) %>" />
  <table><tr>
    <tr>
      <td>Job name:  <%= form.text_field :name, :size => 20 %></
    </tr>
    <tr>
      <td><br>Job type:</td>
    </tr>
    <tr>
      <td><%= radio_button_tag('job_type','raw', true) %>&nbsp;
        Generate a kml from raw data.
      </td>
    </tr>
    <tr>
      <td><%= radio_button_tag('job_type','pre_computed', false) %>&nbsp;
        Generate a kml from pre-computed data.<br><br>
      </td>
    </tr>
    <tr>
      <td><%= submit_tag "Define", :class => "submit" %></td></tr>
    </tr>
  </table>
  <% end%>
